@model AccessSystem.Model.AdminModel
@{
    ViewBag.Title = "EditScreen";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="alert alert-dismissible alert-danger @(String.IsNullOrEmpty(Model.ErrorMessage)?"hidden":"")">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <h4 class="alert-heading">Error!!!</h4>
    <p class="mb-0">@Model.ErrorMessage</p>
</div>
<div class="card" style="">
    <div class="card-header">@ViewBag.EditScreenHeader</div>
    <div class="card-body">
        @using (Html.BeginForm("Update", "AdminUser", FormMethod.Post, new { @name = "AdminUserForm" }))
        {
            <fieldset>
                @* Add class row if viewing *@
                @Html.TextBoxFor(model => model.SelectedAccountInfo.ADMINUSERID, new { @class = "hidden", @id = "ADMINUSERID" })
                <div class="form-group row margin_bottom_10">
                    <label for="Name" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        @* class should be form-control-plaintext when viewing *@
                        @Html.TextBoxFor(model => model.SelectedAccountInfo.FIRSTNAME, new { @class = "form-control", @id = "FIRSTNAME" })
                    </div>
                </div>

                <div class="form-group row margin_bottom_10">
                    <label for="Code" class="col-sm-2 col-form-label">Middle Name</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.SelectedAccountInfo.MIDDLENAME, new { @class = "form-control", @id = "MIDDLENAME" })
                    </div>
                </div>

                <div class="form-group row margin_bottom_10">
                    <label for="Code" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.SelectedAccountInfo.LASTNAME, new { @class = "form-control", @id = "LASTNAME" })
                    </div>
                </div>

                <button type="submit" class="btn btn-success" href=""><i class="icon-save"></i>  Save</button>
                <a class="btn btn-primary" href="@Url.Action("ListScreen","AdminUser")"><i class="icon-chevron-left"></i>  Back</a>
            </fieldset>
        }

    </div>
</div>

